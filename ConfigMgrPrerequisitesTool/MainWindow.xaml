                    <TextBox x:Name="textBoxRolesRemoteSystem" HorizontalAlignment="Left" Height="23" Margin="181,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="393" IsEnabled="False"/>
                    <Label x:Name="labelRolesProgress" Content="" HorizontalAlignment="Left" Margin="249,428,0,0" VerticalAlignment="Top"/>
                </Grid>
