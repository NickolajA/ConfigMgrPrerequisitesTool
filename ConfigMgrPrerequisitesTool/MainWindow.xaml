                            <ContentControl Content="{Binding}" />
                        </DockPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                <Grid Background="#FF333337" Margin="5,-10,-8,-0.333">
                    <TabControl x:Name="tabControlAD" HorizontalAlignment="Left" Height="456" Margin="14,9,0,0" VerticalAlignment="Top" Width="597" Background="#FF333337">
