                                <Label x:Name="label" Content="Check if proper collation is used for SQL instance" HorizontalAlignment="Left" Margin="122,124,0,0" VerticalAlignment="Top"/>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
